{
  "name": "afro-technology/waha-laravel-sdk",
  "description": "Laravel SDK for WAHA with multi-host, optional DB pinning, and OpenAPI generated client",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "waha",
    "whatsapp",
    "laravel",
    "sdk",
    "openapi"
  ],
  "require": {
    "php": "^8.1 || ^8.2 || ^8.3 || ^8.4",
    "guzzlehttp/guzzle": "^7.5",
    "illuminate/support": "^10.0 || ^11.0 || ^12.0"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "nunomaduro/larastan": "^3.0",
    "orchestra/testbench": "^8.0 || ^9.0 || ^10.0",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^10.0 || ^11.0"
  },
  "autoload": {
    "psr-4": {
      "Vendor\\Waha\\": "src/",
      "Vendor\\Waha\\Generated\\": "src/Generated/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Vendor\\Waha\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Vendor\\Waha\\WahaServiceProvider"
      ],
      "aliases": {
        "Waha": "Vendor\\Waha\\Facades\\Waha"
      }
    }
  },
  "scripts": {
    "openapi:fetch": "php artisan waha:openapi:fetch",
    "openapi:generate": "php artisan waha:openapi:generate",
    "openapi:update": "php artisan waha:openapi:update",
    "test": "vendor/bin/phpunit",
    "pint": "vendor/bin/pint",
    "pint:test": "vendor/bin/pint --test",
    "stan": "XDEBUG_MODE=off vendor/bin/phpstan analyse"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  }
}
